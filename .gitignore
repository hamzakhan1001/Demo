# Ignore WordPress core files
wp-admin/
wp-content/
wp-includes/
wp-config.php

# Ignore configuration files that may contain sensitive information
wp-config-*.php

# Ignore the wp-content/cache directory
wp-content/cache/

# Ignore the wp-content/upgrade directory
wp-content/upgrade/

# Ignore the wp-content/backup-db directory
wp-content/backup-db/

# Ignore theme and plugin dependencies (node_modules, vendor, etc.)
wp-content/themes/*/node_modules/
wp-content/plugins/*/node_modules/
wp-content/themes/*/vendor/
wp-content/plugins/*/vendor/

# Ignore log files and other generated files
*.log
.htaccess
sitemap.xml
sitemap.xml.gz
